<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="@string/hello_text" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_text_size_body_2_material"
            android:text="@string/bt_spotify_text"
            android:id="@+id/bt_spotify"
            android:layout_marginTop="@dimen/bt_top_margin"
            android:background="@color/bt_bg_color"
            android:textColor="@color/bt_font_color"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/bt_capstone"
            android:layout_alignStart="@+id/bt_capstone"
            android:layout_alignRight="@+id/bt_capstone"
            android:layout_alignEnd="@+id/bt_capstone"
            android:onClick="sendMessage" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_text_size_body_2_material"
            android:text="@string/bt_scores_text"
            android:id="@+id/bt_scores"
            android:layout_marginTop="@dimen/bt_top_margin"
            android:background="@color/bt_bg_color"
            android:textColor="@color/bt_font_color"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_below="@+id/bt_spotify"
            android:layout_alignLeft="@+id/bt_spotify"
            android:layout_alignStart="@+id/bt_spotify"
            android:layout_alignRight="@+id/bt_spotify"
            android:layout_alignEnd="@+id/bt_spotify"
            android:onClick="sendMessage" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_text_size_body_2_material"
            android:text="@string/bt_library_text"
            android:id="@+id/bt_library"
            android:layout_marginTop="@dimen/bt_top_margin"
            android:background="@color/bt_bg_color"
            android:textColor="@color/bt_font_color"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_below="@+id/bt_scores"
            android:layout_alignLeft="@+id/bt_scores"
            android:layout_alignStart="@+id/bt_scores"
            android:layout_alignRight="@+id/bt_scores"
            android:layout_alignEnd="@+id/bt_scores"
            android:onClick="sendMessage" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_text_size_body_2_material"
            android:text="@string/bt_build_text"
            android:id="@+id/bt_build"
            android:layout_marginTop="@dimen/bt_top_margin"
            android:background="@color/bt_bg_color"
            android:textColor="@color/bt_font_color"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_below="@+id/bt_library"
            android:layout_alignLeft="@+id/bt_library"
            android:layout_alignStart="@+id/bt_library"
            android:layout_alignRight="@+id/bt_library"
            android:layout_alignEnd="@+id/bt_library"
            android:onClick="sendMessage" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_text_size_body_2_material"
            android:text="@string/bt_reader_text"
            android:id="@+id/bt_reader"
            android:layout_marginTop="@dimen/bt_top_margin"
            android:background="@color/bt_bg_color"
            android:textColor="@color/bt_font_color"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_below="@+id/bt_build"
            android:layout_alignLeft="@+id/bt_build"
            android:layout_alignStart="@+id/bt_build"
            android:layout_alignRight="@+id/bt_capstone"
            android:layout_alignEnd="@+id/bt_capstone"
            android:onClick="sendMessage" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_text_size_body_2_material"
            android:text="@string/bt_capstone_text"
            android:id="@+id/bt_capstone"
            android:layout_marginTop="@dimen/bt_top_margin"
            android:background="#ffff001e"
            android:textColor="@color/bt_font_color"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_below="@+id/bt_reader"
            android:layout_centerHorizontal="true"
            android:onClick="sendMessage" />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
